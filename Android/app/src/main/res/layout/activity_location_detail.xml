<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ui.locations.locationdetail.LocationDetailActivity">

    <ImageView
        android:id="@+id/imageViewUserLocationDetail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewCountryLocationDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUserLocationDetail" />

    <TextView
        android:id="@+id/textViewCityLocationDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCountryLocationDetail" />

    <TextView
        android:id="@+id/textViewStreetLocationDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCityLocationDetail" />

    <TextView
        android:id="@+id/textViewSeeLocationDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/txt_see_location"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPostalCodeLocationDetail" />

    <ImageButton
        android:id="@+id/imageButtonSeeLocationDetail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/round_bg_primary"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSeeLocationDetail"
        app:layout_constraintStart_toEndOf="@+id/textViewSeeLocationDetail"
        app:layout_constraintTop_toTopOf="@+id/textViewSeeLocationDetail"
        app:srcCompat="@drawable/ic_location_on_white_24dp" />

    <TextView
        android:id="@+id/textViewSeeUserOfferingLocationDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/txt_user_offering_location"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSeeLocationDetail" />

    <ImageButton
        android:id="@+id/imageButtonUserOfferingLocationDetail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/round_bg_primary"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSeeUserOfferingLocationDetail"
        app:layout_constraintStart_toEndOf="@+id/textViewSeeUserOfferingLocationDetail"
        app:layout_constraintTop_toTopOf="@+id/textViewSeeUserOfferingLocationDetail"
        app:srcCompat="@drawable/ic_remove_red_eye_white_24dp" />

    <TextView
        android:id="@+id/textViewPostalCodeLocationDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStreetLocationDetail" />
</androidx.constraintlayout.widget.ConstraintLayout>