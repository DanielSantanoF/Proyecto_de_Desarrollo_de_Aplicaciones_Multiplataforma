<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ui.users.userdetail.UserDetailActivity">

    <ImageView
        android:id="@+id/imageViewAvatarUserDetail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewNameUserDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAvatarUserDetail" />

    <TextView
        android:id="@+id/textViewUsernameUserDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewNameUserDetail"
        app:layout_constraintStart_toStartOf="@+id/textViewNameUserDetail"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameUserDetail" />

    <TextView
        android:id="@+id/textViewBirthDateUserDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewUsernameUserDetail"
        app:layout_constraintStart_toStartOf="@+id/textViewUsernameUserDetail"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsernameUserDetail" />

    <TextView
        android:id="@+id/textViewAgeUserDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewBirthDateUserDetail"
        app:layout_constraintStart_toStartOf="@+id/textViewBirthDateUserDetail"
        app:layout_constraintTop_toBottomOf="@+id/textViewBirthDateUserDetail" />

    <TextView
        android:id="@+id/textViewTypeUserDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewAgeUserDetail"
        app:layout_constraintStart_toStartOf="@+id/textViewAgeUserDetail"
        app:layout_constraintTop_toBottomOf="@+id/textViewAgeUserDetail" />

    <ImageButton
        android:id="@+id/imageButtonEmailUserDetails"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/round_bg_accent"
        app:layout_constraintEnd_toEndOf="@+id/textViewTypeUserDetail"
        app:layout_constraintStart_toStartOf="@+id/textViewTypeUserDetail"
        app:layout_constraintTop_toBottomOf="@+id/textViewTypeUserDetail"
        app:srcCompat="@drawable/ic_email_white_24dp" />

    <ImageButton
        android:id="@+id/imageButtonPhoneUserDetail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_bg_accent"
        app:layout_constraintEnd_toEndOf="@+id/imageButtonEmailUserDetails"
        app:layout_constraintStart_toStartOf="@+id/imageButtonEmailUserDetails"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonEmailUserDetails"
        app:srcCompat="@drawable/ic_local_phone_white_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>